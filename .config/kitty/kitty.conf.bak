font_size			9.0
# font_family         Departure Mono
# bold_font           Departure Mono
# italic_font         auto
# bold_italic_font    auto

#adjust_line_height  95%
#adjust_column_width 0
window_padding_width 4
#background_opacity 0.8


scrollback_lines 200000
disable_ligatures never

mouse_hide_wait 3.0
url_style curly
copy_on_select yes
strip_trailing_spaces smart

repaint_delay 8
input_delay 3
sync_to_monitor no
enable_audio_bell yes
window_alert_on_bell yes
bell_on_tab yes

window_border_width 1.0
draw_minimal_borders yes
window_margin_width 0.0
window_padding_width 2.0

inactive_text_alpha 0.8

# Tab Bar  
tab_bar_edge			top
tab_bar_min_tabs 		1
tab_switch_strategy 	previous
tab_bar_style			powerline
tab_powerline_style		slanted
tab_separator			‚ùØ
active_tab_font_style		normal

# Cursor
cursor_shape			block
cursor_blink_interval		-1
cursor_stop_blinking_after	15

include ./gruvbox-dark.conf

sync_to_monitor yes
wheel_scroll_multiplier 5.0

allow_remote_control yes
linux_display_server wayland
listen_on unix:/tmp/kitty


# BEGIN_KITTY_FONTS
font_family      family='Departure Mono' postscript_name=DepartureMono-Regular
bold_font        family='Departure Mono' postscript_name=DepartureMono-Regular
italic_font      auto
bold_italic_font auto
# END_KITTY_FONTS

# BEGIN_KITTY_THEME
# Gruvbox Dark
include current-theme.conf
# END_KITTY_THEME