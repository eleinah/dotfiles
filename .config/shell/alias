alias \
\
c="clear" \
v="nvim" \
cat="bat" \
l="lsd -lh --color=auto --group-directories-first" \
ls="lsd -h --color=auto --group-directories-first" \
la="lsd -lah --color=auto --group-directories-first" \
grep="grep --color=auto" \
shell="exec $SHELL -l" \
fk="sudo !!" \
mv="mv -i" \
rm="rm -Iv" \
df="df -h" \
du="du -h -d 1" \
wthr="curl wttr.in" \
ff="fastfetch" \
view="viu -a" \
